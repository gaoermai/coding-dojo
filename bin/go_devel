#!/bin/bash

CONTAINER_NAME='dojo-ruby'

#######################################################

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )

if [ -z "$DOCKER_HOST" ]; then
    echo 'Connect to docker ...'
    eval "$(docker-machine env default)"
fi

docker start ${CONTAINER_NAME}
docker exec -it ${CONTAINER_NAME} /bin/bash
